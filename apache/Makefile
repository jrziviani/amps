##
##  Makefile -- Build procedure for sample cool_framework Apache module
##  Autogenerated via ``apxs -n cool_framework -g''.
##

builddir=.
top_srcdir=/home/ziviani/ziviani/httpd/www
top_builddir=/home/ziviani/ziviani/httpd/www
include /home/ziviani/ziviani/httpd/www/build/special.mk

CXX=g++
CXXFLAGS=-std=c++17

#   the used tools
APACHECTL=apachectl

#   additional defines, includes and libraries
#DEFS=-Dmy_define=my_value
#INCLUDES=-Imy/include/dir
#LIBS=-Lmy/lib/dir -lmylib

#   the default target
all: local-shared-build

#   install the shared object file into Apache 
install: install-modules-yes

#   cleanup
clean:
	-rm -f mod_cool_framework.o mod_cool_framework.lo mod_cool_framework.slo mod_cool_framework.la 

#   simple test
test: reload
	lynx -mime_header http://localhost/cool_framework

#   install and activate shared object by reloading Apache to
#   force a reload of the shared object file
reload: install restart

#   the general Apache start/restart/stop
#   procedures
start:
	$(APACHECTL) start
restart:
	$(APACHECTL) restart
stop:
	$(APACHECTL) stop

